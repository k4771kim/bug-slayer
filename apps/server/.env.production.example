# Production Environment Variables for Railway
PORT=3001
NODE_ENV=production

# Database (Railway provides DATABASE_URL automatically with PostgreSQL addon)
DATABASE_URL="postgresql://user:password@host:5432/bugslayer"

# JWT Authentication (generate a strong secret for production)
JWT_SECRET="change-me-to-a-strong-random-secret"
JWT_EXPIRES_IN="7d"

# CORS (set to your Vercel frontend URL)
CORS_ORIGIN="https://bug-slayer.vercel.app"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
